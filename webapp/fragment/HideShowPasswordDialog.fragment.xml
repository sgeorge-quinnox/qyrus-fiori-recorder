<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Dialog id="hideShowDialog"
          title="Advanced Controls"
          type="Message">
    <content>
      <VBox class="sapUiMediumMargin">
        <Text text="Enter password to continue."/>
        <Input id="hideShowPwd"
               type="Password"
               width="100%"
               liveChange=".onHideShowPasswordLiveChange"
               placeholder="Password"/>
      </VBox>
    </content>

    <beginButton>
      <Button text="Proceed"
              type="Emphasized"
              press=".onHideShowProceed"/>
    </beginButton>
    <endButton>
      <Button text="Close"
              press=".onHideShowCancel"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
